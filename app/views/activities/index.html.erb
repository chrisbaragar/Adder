<h1>Listing activities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= best_in_place activity, :name, tabindex: "1" %></td>
        <td><%= best_in_place activity, :duration, tabindex: "2" %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>Total: <%= @activities.map { |e| e.duration }.reduce(:+) %></p>

<br>

<%= link_to 'New Activity', new_activity_path %>
